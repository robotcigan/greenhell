.hero
  color #fff
  display flex
  height 100vh
  width 100%
  &__img-container
    height 100vh
    left 0
    overflow hidden
    position absolute
    top 0
    width 100%
  &__img
    background no-repeat center / cover
    height 100vh
    left 0
    position absolute
    top 0
    width 100%
    &:before
      background-color rgba(#000, .1)
      content ''
      height 100%
      left 0
      position absolute
      top 0
      width 100%
  &__rectangle
    background-color $main
    height 100vh
    right 0
    position absolute
    top 0
    width 0
  &__align
    align-items center
    display flex
    opacity 0
    position relative
    width 100%
    z-index 100
  &__container
    max-width 68rem
  .h1
    color #fff
  &__description
    color #fff
    font-size 2rem
    font-weight 400
    line-height (24/20)



